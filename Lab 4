Lab 4

#include <iostream>
using namespace std;

int main() {
    int grade;

    // Ask for student's grade
    cout << "Enter grade: ";
    cin >> grade;

    // Compound statement using braces {}
    if (grade >= 75) {
        cout << "Result: Pass" << endl;
        cout << "Congratulations!" << endl;
        cout << "Keep up the good work." << endl;
    } else {
        cout << "Result: Fail" << endl;
    }

    return 0;
}
